<% include ./header %>
<link rel="stylesheet" href="/css/app.css">

<div class="main">
  <div class="row mt-5" style="position: absolute; width: 100%;">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Let change your profile here ( ͡° ͜ʖ ͡°)
        </h1>
        <% include ./partials/messages %>
        <form action="/personedit/<%= user.id%> " method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter your display name"
              value="<%= user.name %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your class time"
              value="<%= user.email %>" />
          </div>
          <div class="form-group">
            <label for="field">Field of Study</label>
            <input type="field" id="field" name="field" class="form-control" placeholder="Enter your field of study"
              value="<%= user.field %>" />
          </div>  
          <div class="form-group">
            <label for="major">Major</label>
            <input type="major" id="major" name="major" class="form-control" placeholder="Enter your major"
              value="<%= user.major %>" />
          </div> 
           <div class="form-group">
            <label for="minor">Minor</label>
            <input type="minor" id="minor" name="minor" class="form-control" placeholder="Enter your minor"
              value="<%= user.minor %>" />
          </div>  
          <div class="form-group">
            <label for="avata">Avata photo</label>
            <input type="avata" id="avata" name="avata" class="form-control" placeholder="Enter your avata's image link"
              value="<%= user.avata %>" />
          </div>    
          
          <button type="submit" class="btn btn-primary btn-block">
            Confirm it (▀̿Ĺ̯▀̿ ̿)
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
