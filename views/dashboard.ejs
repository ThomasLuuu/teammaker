<style>
  .card {
    border-radius: 4px;
    background: #fff;
    box-shadow: 0 6px 10px rgba(0, 0, 0, .08), 0 0 6px rgba(0, 0, 0, .05);
    transition: .3s transform cubic-bezier(.155, 1.105, .295, 1.12), .3s box-shadow, .3s -webkit-transform cubic-bezier(.155, 1.105, .295, 1.12);
    padding: 14px 80px 10px 20px;
    cursor: pointer;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, .12), 0 4px 8px rgba(0, 0, 0, .06);
  }
</style>
<link rel="stylesheet" href="/css/app.css">
<% include ./header %>

<h1 class="title">
  This is user page
</h1>

<div class="container">
  <% users.forEach(function (user) {%>
  <div class="col-md-3" style="padding-bottom: 40px;">
    <div class="card overlay" style="width: 18rem; border-radius: 1rem; border-color: green;">
      <div class="card-body" style="width: 18rem; border-radius: 1rem; border-color: green;">
        <h5 class="card-title"><%= user.name %></h5>
        <p class="card-text"><%= user.course   %></p>
        <p class="card-text"><%= user.classtime  %></p>
        <a href="/detail/<%= user.id%> " class="btn btn-primary">Detail</a>
      </div>
    </div>
  </div>
  <%}) %>
</div>
<% include ./footer %>