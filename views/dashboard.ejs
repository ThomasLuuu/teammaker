<h1>
  This is user page
</h1>

<div class="container">
  <% users.forEach(function (user) {%>
    <div class="col-md-3" style="padding-bottom: 40px;">
    <div class="card overlay" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= user.name %></h5>
        <p class="card-text"><%= user.assignment   %></p>
        <p class="card-text"><%= user.percentage  %></p>
        <a href="/detail/<%= user.id%> "  class="btn btn-primary">Detail</a>
      </div>
      </div>

    </div>
    <%}) %>
    
</div>