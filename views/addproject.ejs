<% include ./header %>

<div class="main" style="position: absolute; width: 100%;">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Add Project
        </h1>
        <% include ./partials/messages %>
        <form action="/addproject/<%= user.id %>" method="POST">
          <div class="form-group">
            <label for="course">Course</label>
            <input
              type="course"
              id="course"
              name="course"
              class="form-control"
              placeholder="Enter your Course"
              value="<%= typeof course != 'undefined' ? course : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="classtime">Class time</label>
            <input
              type="text"
              id="classtime"
              name="classtime"
              class="form-control"
              onfocus="onFocus()"
              onblur="onBlur()"
              placeholder="Enter your class time"
              value="<%= typeof classtime != 'undefined' ? classtime : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="GPA">Aiming Score</label>
            <input
              type="GPA"
              id="GPA"
              name="GPA"
              class="form-control"
              placeholder="Enter your aiming score"
              value="<%= typeof GPA != 'undefined' ? GPA : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="requirement">Requirement</label>
            <input
              type="requirement"
              id="requirement"
              name="requirement"
              class="form-control"
              placeholder="Your Requirement for a teammate"
              value="<%= typeof requirement != 'undefined' ? requirement: '' %>"
            />
          </div>
          <div class="form-group">
            <label for="photo">Photo</label>
            <input
              type="photo"
              id="photo"
              name="photo"
              class="form-control"
              placeholder="Leave Assignment's Photo here"
              value="<%= typeof photo != 'undefined' ? photo : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Submit Project
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  //Change to date time picker when clicked
  function onFocus() {
    var x = document.getElementById("classtime")
    x.type = "datetime-local"
  }

  //Change to normal text field when unclicked
  function onBlur() {
    var x = document.getElementById("classtime")
    x.type = "text"
  }
</script>
  