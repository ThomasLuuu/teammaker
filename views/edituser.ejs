<% include ./header %>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Edit User
      </h1>
      <% include ./partials/messages %>
      <form action="/edituser/<%= user.id%> " method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= user.name %>" />
        </div>

        <div class="form-group">
          <label for="photo">Email</label>
          <input type="phot" id="photo" name="photo" class="form-control" placeholder="Change Email"
            value="<%= user.email%>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Change User detail
        </button>
      </form>
    </div>
  </div>
</div>

<% include ./footer %>